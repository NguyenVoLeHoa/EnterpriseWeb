@model IEnumerable<App.Entities.Event>

@{
    ViewData["Title"] = "Index";
}
<body style="background-color: #FDFCF6">

    <div class="container">
        <h1 class="d-flex justify-content-center mb-3">Event List</h1>

        <div class="mb-3">
            <a asp-action="Create" class="btn btn-secondary">Create New</a>
        </div>

        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th>
                        Event Name
                    </th>
                    <th>
                        Open Date
                    </th>
                    <th>
                        Closure Date
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OpenDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClosureDate)
                        </td>
                        <td>
                            <div class="btn-group" role="group">

                                @if (User.IsInRole("Manager"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.EventID" class="btn btn-warning">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.EventID" class="btn btn-danger">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                }
                                <a asp-action="Details" asp-route-id="@item.EventID" class="btn btn-info">
                                    <i class="bi bi-info-circle-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>