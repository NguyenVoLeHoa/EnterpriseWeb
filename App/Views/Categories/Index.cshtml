<body style="background-color: #FDFCF6">

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class=text-center>Category Management</h1>
            <div class="d-flex align-items-end justify-content-start">
                <div>
                    <a class="btn btn-secondary" href="@Url.ActionLink("Create", "Categories")"><i class="bi bi-plus-circle-fill"></i> Create A New</a>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td class="align-middle">
                                <a class="btn btn-outline-secondary" href="@Url.ActionLink("Edit", "Categories", new { id= item.CategoryID })"><i class="bi bi-pen"></i> Edit</a>
                                <a class="btn btn-danger" href="@Url.ActionLink("Delete", "Categories", new { id= item.CategoryID })"><i class="bi bi-eye"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
