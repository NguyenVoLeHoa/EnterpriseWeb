@using App.Areas.Identity.Data;
@model IEnumerable<User>

@{
    ViewData["Title"] = "User Management";
}
<body style="background-color: #FDFCF6">

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center">User Management</h1>
            <div class="d-flex align-items-end justify-content-start">
                <div>
                    <a class="btn btn-secondary" href="@Url.ActionLink("Create", "Users")"><i class="bi bi-plus-circle-fill"></i> Create A New</a>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ProfilePicture)</th>
                        <th>Full Name</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @if (item.ProfilePicture != null)
                                {
                                    <img style="width:40px;height:40px; object-fit:cover; border-radius:30px" src="data:image/*;base64,@(Convert.ToBase64String(item.ProfilePicture))">

                                }
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Lastname)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Email)</td>
                            <td class="align-middle">
                                <a class="btn btn-outline-secondary" href="@Url.ActionLink("Edit", "Users", new { id= item.Id })"><i class="bi bi-pen"></i> Edit</a>
                                <a class="btn btn-danger" href="@Url.ActionLink("Delete", "Users", new { id= item.Id })"><i class="bi bi-eye"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>