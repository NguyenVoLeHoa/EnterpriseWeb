@model App.Entities.Event

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>List of Ideas</h1>
    <hr>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Event Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventName)
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventDecription)
            </dd>
            <dt class="col-sm-2">
                Open Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OpenDate)
            </dd>
            <dt class="col-sm-2">
                Pre Closure Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.preClosureDate)
            </dd>
            <dt class="col-sm-2">
                Closure Date
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClosureDate)
            </dd>
        </dl>
    </div>

    <div class="my-4">
        <a href="@Url.Action("Edit", new { id = Model?.EventID })" class="btn btn-secondary">Edit</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>

    <h2 class="d-flex justify-content-center ">Posts</h2>




    <div class="mb-3">
        <a href="@Url.Action("Create", "Posts", new { id = Model?.EventID })" class="btn btn-secondary">Create New</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Brief</th>
                <th>View</th>
                <th>Like</th>
                <th>Dislike</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>@post.Title</td>
                    <td>@post.Brief</td>
                    <td>@post.View</td>
                    <td>@post.Like</td>
                    <td>@post.Dislike</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="/Posts/Details/@post.PostId" class="btn btn-primary"><i class="bi bi-info-circle-fill"></i></a>
                            <a href="/Posts/Like/@post.PostId" class="btn btn-success"><i class="bi bi-hand-thumbs-up"></i></a>
                            <a href="/Posts/Dislike/@post.PostId" class="btn btn-danger"><i class="bi bi-hand-thumbs-down"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>