@model IEnumerable<App.Entities.Department>


@{
    ViewData["Title"] = "Department";

}


<body style="background-color: #FDFCF6">

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class=text-center>Deparment Management</h1>
            <div class="d-flex align-items-end justify-content-start">
                <div>
                    <a class="btn btn-secondary" href="@Url.ActionLink("Create", "Departments")"><i class="bi bi-plus-circle-fill"></i> Create A New</a>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.DepartmentName)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                            <td class="align-middle">
                                <a class="btn btn-outline-secondary" href="@Url.ActionLink("Edit", "Departments", new { id= item.DepartmentID })"><i class="bi bi-pen"></i> Edit</a>
                                <a class="btn btn-danger" href="@Url.ActionLink("Delete", "Departments", new { id= item.DepartmentID })"><i class="bi bi-eye"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>